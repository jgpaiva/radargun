<bench-config>

   <master bindAddress="${127.0.0.1:master.address}" port="${2103:master.port}"/>

   <benchmark initSize="1" maxSize="${1:slaves}" increment="1">
      <DestroyWrapper runOnAllSlaves="true"/>
      <StartCluster staggerSlaveStartup="true" delayAfterFirstSlaveStarts="5000" delayBetweenStartingSlaves = "500"/>
      <ClusterValidation partialReplication="false"/>
      <Warmup operationCount="10000" loadOnWarmup="yes" sizeOfAnAttribute="1000" isPartitioned="yes" numThreads="2"/>
      <!--
         This will average to 10000 requests per thread, although a work-stealing pattern is used so some threads may
         do more work than others.
       -->
      <WebSessionBenchmark sizeOfAnAttribute="1000" numberOfAttributes="10000" numOfThreads="3" numReads="10" numWrites="1" perThreadSimulTime="60000000000" partitioned="yes"/>
      <CsvReportGeneration/>
   </benchmark>

   <products>
      <infinispan4>
         <config name="provaPC.xml"/>
      </infinispan4>
   </products>

   <reports>
      <report name="PCvsPR">
 		<item product="infinispan4" config="provaPC.xml"/>
	
      </report>
   </reports>

</bench-config>
